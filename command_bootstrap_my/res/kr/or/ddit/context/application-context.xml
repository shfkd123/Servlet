<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<!-- dataSource -->
	<bean id="sqlSessionFactory" class="kr.or.ddit.mybatis.OracleMyBatisSqlSessionFactory" />

	<!-- Repository Layer -->
	<bean id="memDAO" class="kr.or.ddit.dao.MemberDAOImpl" />

	<!-- Service layer -->
	<bean id="memService" class="kr.or.ddit.service.MemberServiceImpl">
		<property name="sqlSessionFactory" ref-value="sqlSessionFactory" />
		<property name="memDAO" ref-value="memDAO" />
	</bean>

</beans>